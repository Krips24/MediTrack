<%-include('partials/homeHeader') %>

<div class="topnav">
  <div class="logo">
    <img src="/css/home/images/meditrackLogo.png" alt="Logo" />
    <h2>MediTrack</h2>
  </div>
  <div class="nav-links">
    <a href="home">Home</a>
    <a href="upload">Uploads</a>
    <a href="myFiles">myFiles</a>
    <a href="about">About</a>
  </div>
</div>

<h1 class="page-title">My Files</h1>
<div class="file-list">
  <% if (documents.length === 0) { %>
  <div class="no-records">
    <h3>NO RECORDS FOUND!</h3>
    <img src=""
</div>
  <% } else { %> <% documents.forEach(document => { %>
  <div class="file-item">
    <div class="file-info">
      <span class="file-label">Name:</span>
      <span class="file-value"><%= document.name %></span>
    </div>
    <div class="file-info">
      <span class="file-label">File Name:</span>
      <span class="file-value"><%= document.fileName %></span>
    </div>
    <div class="file-action">
      <a
        class="download-link"
        href="/download/<%= document.fileName %>"
        target="_blank"
        download
        >Download</a
      >
    </div>
  </div>
  <% }); %> <% } %>
</div>


<%- include('partials/footer') %>
